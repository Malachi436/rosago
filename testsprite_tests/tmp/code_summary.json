{
  "projectName": "ROSAgo - School Transport Management System",
  "techStacks": {
    "backend": {
      "framework": "NestJS",
      "language": "TypeScript",
      "database": "PostgreSQL with Prisma ORM",
      "realtime": "Socket.IO",
      "authentication": "JWT with Passport",
      "queueing": "BullMQ with Redis",
      "email": "Brevo API",
      "logging": "Winston"
    },
    "adminWeb": {
      "framework": "Next.js 15",
      "language": "TypeScript",
      "ui": "React 18 with Tailwind CSS",
      "forms": "React Hook Form with Zod validation",
      "maps": "MapLibre GL",
      "charts": "Recharts",
      "stateManagement": "TanStack React Query",
      "realtime": "Socket.IO Client"
    },
    "mobileApp": {
      "framework": "React Native with Expo",
      "language": "TypeScript",
      "navigation": "React Navigation",
      "maps": "React Native Maps",
      "location": "Expo Location",
      "styling": "NativeWind (Tailwind for React Native)",
      "stateManagement": "Zustand",
      "realtime": "Socket.IO Client"
    }
  },
  "features": [
    {
      "name": "Authentication & Authorization",
      "status": "production-ready",
      "description": "JWT-based auth with role-based access control (Platform Admin, Company Admin, Driver, Parent)",
      "components": ["Login", "Password Reset", "Role Guards"]
    },
    {
      "name": "Multi-tenancy",
      "status": "production-ready",
      "description": "Company/School isolation with tenant context",
      "components": ["Company Management", "Tenant Middleware"]
    },
    {
      "name": "Bus Management",
      "status": "production-ready",
      "description": "CRUD operations for buses including capacity, license plate, and driver assignments",
      "components": ["Bus List", "Bus Form", "Bus Assignment"]
    },
    {
      "name": "Driver Management",
      "status": "production-ready",
      "description": "Driver profiles, bus assignments, and trip management",
      "components": ["Driver List", "Driver Form", "Driver Dashboard"]
    },
    {
      "name": "Trip Management",
      "status": "production-ready",
      "description": "Real-time trip monitoring, attendance tracking, and trip history",
      "components": ["Active Trips", "Trip Details", "Attendance Marking"]
    },
    {
      "name": "Routes Management",
      "status": "ui-complete-backend-pending",
      "description": "Route creation with bus assignments, shift selection (Morning/Afternoon), and child assignment",
      "components": ["Route List", "Route Form", "Route Details"],
      "blockers": ["Backend API endpoints needed"]
    },
    {
      "name": "Children Management",
      "status": "production-ready",
      "description": "Child onboarding, parent linking, bulk CSV upload, family code generation",
      "components": ["Child List", "Bulk Onboard Form", "CSV Template"],
      "enhancements": ["Route assignment (pending backend)"]
    },
    {
      "name": "Scheduled Routes",
      "status": "production-ready",
      "description": "Recurring route schedules with activation/suspension controls",
      "components": ["Schedule List", "Trip Generation", "Schedule Management"]
    },
    {
      "name": "Payment Plans",
      "status": "production-ready",
      "description": "Flexible payment plans (Daily/Weekly/Monthly/Termly/Yearly)",
      "components": ["Plan List", "Plan Form", "Plan Activation"]
    },
    {
      "name": "Real-time GPS Tracking",
      "status": "production-ready",
      "description": "Live bus location tracking with map visualization",
      "components": ["Map View", "GPS Worker", "Location Updates"]
    },
    {
      "name": "Analytics & Reports",
      "status": "production-ready",
      "description": "Dashboard with trip statistics, revenue tracking, and child statistics",
      "components": ["Analytics Dashboard", "Report Charts", "Statistics Cards"]
    },
    {
      "name": "Notifications",
      "status": "production-ready",
      "description": "Push notifications for trip updates and system events",
      "components": ["Notification Worker", "Notification Service"]
    },
    {
      "name": "Location Change Requests",
      "status": "production-ready",
      "description": "Parent-initiated location change requests with admin approval",
      "components": ["Request List", "Approval/Rejection Controls"]
    },
    {
      "name": "Early Pickup",
      "status": "production-ready",
      "description": "Parent early pickup requests with driver notification",
      "components": ["Early Pickup Request", "Driver Alert"]
    }
  ],
  "architecture": {
    "backend": {
      "pattern": "Modular monolith with NestJS modules",
      "modules": [
        "auth",
        "admin",
        "buses",
        "drivers",
        "routes",
        "scheduled-routes",
        "trips",
        "children",
        "attendance",
        "gps",
        "notifications",
        "payments",
        "analytics",
        "realtime",
        "email",
        "health"
      ],
      "workers": [
        "GPS Heartbeat Worker",
        "Analytics Worker",
        "Notification Outbound Worker",
        "Payment Webhook Worker"
      ]
    },
    "frontend": {
      "pattern": "Role-based navigation with protected routes",
      "apps": [
        "Driver App (React Native)",
        "Parent App (React Native)",
        "Admin Dashboard (Next.js)"
      ]
    }
  },
  "databaseSchema": {
    "mainEntities": [
      "User",
      "Company",
      "School",
      "Bus",
      "Driver",
      "Route",
      "ScheduledRoute",
      "Trip",
      "Child",
      "Attendance",
      "Notification",
      "PaymentPlan",
      "EarlyPickup"
    ],
    "migrationStatus": "Schema updated, migration pending for route-child enhancements"
  },
  "deploymentStatus": {
    "overall": "85% production-ready",
    "readyFeatures": [
      "Authentication",
      "Bus Management",
      "Driver Management",
      "Trip Management",
      "Scheduled Routes",
      "Children Management (basic)",
      "Payment Plans",
      "Analytics",
      "Real-time Tracking",
      "Notifications"
    ],
    "pendingFeatures": [
      "Routes Management (backend APIs)",
      "Enhanced Children Management (route assignment)"
    ]
  }
}
