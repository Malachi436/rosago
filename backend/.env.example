# ROSAgo Backend Environment Variables
# =====================================
# Copy this file to .env and fill in the values

# ===================
# SERVER CONFIGURATION
# ===================
NODE_ENV=development
PORT=3000

# ===================
# DATABASE (PostgreSQL)
# ===================
# Local development
DATABASE_URL=postgresql://postgres:password@localhost:5432/rosago_dev

# Production (Render provides this automatically)
# DATABASE_URL=postgresql://user:password@host:5432/rosago_prod

# ===================
# REDIS
# ===================
# Local development
REDIS_URL=redis://localhost:6379

# Production (Render provides this automatically)
# REDIS_URL=redis://user:password@host:6379

# ===================
# JWT AUTHENTICATION
# ===================
# Generate a strong secret: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=30m
JWT_REFRESH_EXPIRES_IN=7d

# ===================
# HUBTEL PAYMENTS (Ghana MoMo)
# ===================
# Get these from: developers.hubtel.com
HUBTEL_API_KEY=
HUBTEL_WEBHOOK_SECRET=
HUBTEL_MERCHANT_ID=

# ===================
# MAPTILER (Maps)
# ===================
# Get from: cloud.maptiler.com
MAPTILER_API_KEY=

# ===================
# CLOUDINARY (Image Storage)
# ===================
# Get from: cloudinary.com/console
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# ===================
# SENTRY (Error Tracking)
# ===================
# Get from: sentry.io
SENTRY_DSN=

# ===================
# RESEND (Email)
# ===================
# Get from: resend.com
RESEND_API_KEY=

# ===================
# APP URLS
# ===================
# Development
ADMIN_URL=http://localhost:3001
API_URL=http://localhost:3000

# Production
# ADMIN_URL=https://admin.rosago.com
# API_URL=https://api.rosago.com

# ===================
# MOBILE DEEP LINKING
# ===================
MOBILE_DEEP_LINK=rosago://
