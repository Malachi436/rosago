// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum Role {
  PLATFORM_ADMIN
  COMPANY_ADMIN
  DRIVER
  PARENT
}

enum TripStatus {
  SCHEDULED
  IN_PROGRESS
  ARRIVED_SCHOOL
  RETURN_IN_PROGRESS
  COMPLETED
}

enum AttendanceStatus {
  PENDING
  PICKED_UP
  DROPPED
  MISSED
}

enum NotificationType {
  INFO
  WARNING
  ALERT
  PICKUP
  DROPOFF
  DELAY
  PAYMENT
  SKIP_REQUEST
  PARENT_PICKUP
  UNSKIP_REQUEST
  LOCATION_CHANGE_REQUEST
  GRADE_UPDATE
}

enum PickupType {
  HOME
  ROADSIDE
  SCHOOL
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
  CANCELLED
}

enum LocationChangeStatus {
  PENDING
  APPROVED
  REJECTED
  COMPLETED
}

enum DayOfWeek {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}

enum ScheduleStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
}

// Models
model Company {
  id              String          @id @default(uuid())
  name            String
  email           String          @unique
  phone           String?
  address         String?
  baseFare        Int             @default(50000) // Base fare in UGX
  currency        String          @default("UGX")
  schools         School[]
  users           User[]
  buses           Bus[]           // Buses owned by this company
  fareHistories   FareHistory[]
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
}

model School {
  id        String   @id @default(uuid())
  name      String
  companyId String
  company   Company  @relation(fields: [companyId], references: [id])
  latitude  Float?
  longitude Float?
  address   String?
  phone     String?  // Added for contact information
  email     String?  // Added for contact information
  users     User[]
  children  Child[]
  routes    Route[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([companyId])
}

model User {
  id                      String          @id @default(uuid())
  email                   String          @unique
  passwordHash            String
  firstName               String
  lastName                String
  phone                   String?
  role                    Role
  refreshToken            String?
  companyId               String?
  company                 Company?        @relation(fields: [companyId], references: [id])
  schoolId                String?
  school                  School?         @relation(fields: [schoolId], references: [id])
  driver                  Driver?
  parentChildren          Child[]         @relation("ParentChild")
  paymentIntents          PaymentIntent[]
  notifications           Notification[]
  auditLogs               AuditLog[]
  earlyPickupRequests     EarlyPickupRequest[] @relation("EarlyPickupRequester")
  approvedEarlyPickups    EarlyPickupRequest[] @relation("EarlyPickupApprover")
  createdAt               DateTime        @default(now())
  updatedAt               DateTime        @updatedAt

  @@index([companyId])
  @@index([schoolId])
}

model Driver {
  id              String           @id @default(uuid())
  license         String           @unique
  userId          String           @unique
  user            User             @relation(fields: [userId], references: [id])
  buses           Bus[]
  trips           Trip[]
  scheduledRoutes ScheduledRoute[]
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
}

model Child {
  id                String            @id @default(uuid())
  uniqueCode        String?           @unique // For parent registration with existing bus systems
  firstName         String
  lastName          String
  dateOfBirth       DateTime
  grade             String? // e.g., "Grade 1", "Grade 2"
  parentId          String?
  parent            User?             @relation("ParentChild", fields: [parentId], references: [id])
  parentPhone       String? // For onboarding before parent claims
  schoolId          String
  school            School            @relation(fields: [schoolId], references: [id])
  routeId           String? // Which route/bus this child is assigned to
  route             Route?            @relation(fields: [routeId], references: [id])
  pickupType        PickupType        @default(SCHOOL)
  pickupLatitude    Float?
  pickupLongitude   Float?
  pickupDescription String? // For roadside: description of landmark/location
  homeLatitude      Float?
  homeLongitude     Float?
  homeAddress       String?
  colorCode         String            @default("#3B82F6") // Default blue
  isClaimed         Boolean           @default(false) // Whether parent has claimed this child (changed from isLinked)
  daysUntilPayment  Int? // Payment tracking from legacy school system
  allergies         String? // Child allergies
  specialInstructions String? // Special instructions for driver
  attendance        ChildAttendance[]
  tripExceptions    TripException[]
  earlyPickupRequests EarlyPickupRequest[]
  locationChangeRequests LocationChangeRequest[]
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  @@index([parentId])
  @@index([schoolId])
  @@index([uniqueCode])
  @@index([routeId])
  @@index([parentPhone])
}

model Bus {
  id              String           @id @default(uuid())
  plateNumber     String           @unique
  capacity        Int
  companyId       String?          // Company that owns this bus (optional for migration)
  company         Company?         @relation(fields: [companyId], references: [id])
  driverId        String?          // Made optional - driver can be assigned later
  driver          Driver?          @relation(fields: [driverId], references: [id])
  routes          Route[] // Routes that use this bus
  locations       BusLocation[]
  trips           Trip[]
  scheduledRoutes ScheduledRoute[]
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  @@index([driverId])
  @@index([companyId])
}

model Route {
  id              String           @id @default(uuid())
  name            String
  schoolId        String
  school          School           @relation(fields: [schoolId], references: [id])
  busId           String? // Which bus runs this route
  bus             Bus?             @relation(fields: [busId], references: [id])
  shift           String? // "MORNING" or "AFTERNOON"
  children        Child[] // Children assigned to this route
  stops           Stop[]
  trips           Trip[]
  scheduledRoutes ScheduledRoute[]
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  @@index([schoolId])
  @@index([busId])
}

model ScheduledRoute {
  id                 String         @id @default(uuid())
  routeId            String
  route              Route          @relation(fields: [routeId], references: [id])
  driverId           String
  driver             Driver         @relation(fields: [driverId], references: [id])
  busId              String
  bus                Bus            @relation(fields: [busId], references: [id])
  scheduledTime      String         // Format: "HH:mm" (e.g., "07:00")
  recurringDays      DayOfWeek[]    // Array of days this route runs
  status             ScheduleStatus @default(ACTIVE)
  autoAssignChildren Boolean        @default(true)
  effectiveFrom      DateTime?      // When this schedule starts
  effectiveUntil     DateTime?      // When this schedule ends (null = indefinite)
  createdAt          DateTime       @default(now())
  updatedAt          DateTime       @updatedAt

  @@index([routeId])
  @@index([driverId])
  @@index([status])
}

model Stop {
  id        String   @id @default(uuid())
  name      String
  latitude  Float
  longitude Float
  order     Int
  routeId   String
  route     Route    @relation(fields: [routeId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([routeId])
}

model Trip {
  id          String            @id @default(uuid())
  busId       String
  bus         Bus               @relation(fields: [busId], references: [id])
  routeId     String
  route       Route             @relation(fields: [routeId], references: [id])
  driverId    String
  driver      Driver            @relation(fields: [driverId], references: [id])
  status      TripStatus        @default(SCHEDULED)
  startTime   DateTime?
  endTime     DateTime?
  histories   TripHistory[]
  attendances ChildAttendance[]
  exceptions  TripException[]
  earlyPickupRequests EarlyPickupRequest[]
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  @@index([busId])
  @@index([routeId])
  @@index([driverId])
}

model TripHistory {
  id        String     @id @default(uuid())
  tripId    String
  trip      Trip       @relation(fields: [tripId], references: [id])
  status    TripStatus
  timestamp DateTime   @default(now())
  createdAt DateTime   @default(now())

  @@index([tripId])
}

model ChildAttendance {
  id         String           @id @default(uuid())
  childId    String
  child      Child            @relation(fields: [childId], references: [id])
  tripId     String
  trip       Trip             @relation(fields: [tripId], references: [id])
  status     AttendanceStatus
  timestamp  DateTime         @default(now())
  recordedBy String // userId of who recorded it
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt

  @@unique([childId, tripId])
  @@index([childId])
  @@index([tripId])
}

model BusLocation {
  id        String   @id @default(uuid())
  busId     String
  bus       Bus      @relation(fields: [busId], references: [id])
  latitude  Float
  longitude Float
  speed     Float
  timestamp DateTime @default(now())
  createdAt DateTime @default(now())

  @@index([busId, timestamp(desc)])
}

model PaymentIntent {
  id        String   @id @default(uuid())
  amount    Int
  currency  String   @default("UGX")
  parentId  String
  parent    User     @relation(fields: [parentId], references: [id])
  status    String // pending, succeeded, failed
  hubtleRef String?
  metadata  Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([parentId])
}

model Notification {
  id                String           @id @default(uuid())
  title             String
  message           String
  type              NotificationType
  userId            String
  user              User             @relation(fields: [userId], references: [id])
  isRead            Boolean          @default(false)
  requiresAck       Boolean          @default(false) // Requires driver acknowledgment
  acknowledgedAt    DateTime?
  relatedEntityType String? // e.g., "TRIP_EXCEPTION", "LOCATION_CHANGE_REQUEST"
  relatedEntityId   String? // ID of the related entity
  metadata          Json? // Additional data like child info, old/new location
  sentAt            DateTime         @default(now())
  readAt            DateTime?
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt

  @@index([userId])
  @@index([isRead])
  @@index([requiresAck])
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  action    String
  entity    String
  entityId  String?
  details   Json?
  ipAddress String?
  userAgent String?
  timestamp DateTime @default(now())

  @@index([userId])
  @@index([timestamp])
}

model TripException {
  id        String   @id @default(uuid())
  childId   String
  child     Child    @relation(fields: [childId], references: [id])
  tripId    String?
  trip      Trip?    @relation(fields: [tripId], references: [id])
  date      DateTime
  type      String   // "SKIP_TRIP" or "EARLY_PICKUP"
  reason    String?
  status    String   // "ACTIVE", "COMPLETED", "CANCELLED"
  requestedAt DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([childId, tripId])
  @@index([childId])
  @@index([tripId])
  @@index([date])
}

model EarlyPickupRequest {
  id              String        @id @default(uuid())
  childId         String
  child           Child         @relation(fields: [childId], references: [id])
  tripId          String
  trip            Trip          @relation(fields: [tripId], references: [id])
  requestedBy     String
  requestedByUser User          @relation("EarlyPickupRequester", fields: [requestedBy], references: [id])
  status          RequestStatus @default(PENDING)
  reason          String?
  timeOfDay       String?       // MORNING or EVENING
  requestedTime   DateTime      @default(now())
  approvedBy      String?
  approvedByUser  User?         @relation("EarlyPickupApprover", fields: [approvedBy], references: [id])
  approvedAt      DateTime?
  rejectionReason String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@unique([childId, tripId])
  @@index([childId])
  @@index([tripId])
  @@index([status])
  @@index([requestedTime])
}

model LocationChangeRequest {
  id                String               @id @default(uuid())
  childId           String
  child             Child                @relation(fields: [childId], references: [id])
  requestedBy       String // Parent user ID
  oldLatitude       Float?
  oldLongitude      Float?
  oldAddress        String?
  newLatitude       Float
  newLongitude      Float
  newAddress        String?
  status            LocationChangeStatus @default(PENDING)
  reason            String? // Why they're changing location
  reviewedBy        String? // Admin user ID
  reviewedAt        DateTime?
  reviewNotes       String?
  completedAt       DateTime?
  createdAt         DateTime             @default(now())
  updatedAt         DateTime             @updatedAt

  @@index([childId])
  @@index([status])
  @@index([createdAt])
}

model FareHistory {
  id         String   @id @default(uuid())
  companyId  String
  company    Company  @relation(fields: [companyId], references: [id])
  oldFare    Int
  newFare    Int
  changedBy  String // Admin user ID who made the change
  reason     String? // Why the fare was changed
  createdAt  DateTime @default(now())

  @@index([companyId])
  @@index([createdAt])
}
