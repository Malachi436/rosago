// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum Role {
  PLATFORM_ADMIN
  COMPANY_ADMIN
  DRIVER
  PARENT
}

enum TripStatus {
  SCHEDULED
  IN_PROGRESS
  ARRIVED_SCHOOL
  RETURN_IN_PROGRESS
  COMPLETED
}

enum AttendanceStatus {
  PICKED_UP
  DROPPED
  MISSED
}

enum NotificationType {
  INFO
  WARNING
  ALERT
}

enum PickupType {
  HOME
  ROADSIDE
  SCHOOL
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
  CANCELLED
}

// Models
model Company {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  phone     String?
  address   String?
  schools   School[]
  users     User[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model School {
  id        String   @id @default(uuid())
  name      String
  companyId String
  company   Company  @relation(fields: [companyId], references: [id])
  latitude  Float?
  longitude Float?
  address   String?
  users     User[]
  children  Child[]
  routes    Route[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([companyId])
}

model User {
  id                      String          @id @default(uuid())
  email                   String          @unique
  passwordHash            String
  firstName               String
  lastName                String
  phone                   String?
  role                    Role
  refreshToken            String?
  companyId               String?
  company                 Company?        @relation(fields: [companyId], references: [id])
  schoolId                String?
  school                  School?         @relation(fields: [schoolId], references: [id])
  driver                  Driver?
  parentChildren          Child[]         @relation("ParentChild")
  paymentIntents          PaymentIntent[]
  notifications           Notification[]
  auditLogs               AuditLog[]
  earlyPickupRequests     EarlyPickupRequest[] @relation("EarlyPickupRequester")
  approvedEarlyPickups    EarlyPickupRequest[] @relation("EarlyPickupApprover")
  createdAt               DateTime        @default(now())
  updatedAt               DateTime        @updatedAt

  @@index([companyId])
  @@index([schoolId])
}

model Driver {
  id        String   @id @default(uuid())
  license   String   @unique
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
  buses     Bus[]
  trips     Trip[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Child {
  id                String            @id @default(uuid())
  firstName         String
  lastName          String
  dateOfBirth       DateTime
  parentId          String
  parent            User              @relation("ParentChild", fields: [parentId], references: [id])
  schoolId          String
  school            School            @relation(fields: [schoolId], references: [id])
  pickupType        PickupType        @default(SCHOOL)
  pickupLatitude    Float?
  pickupLongitude   Float?
  pickupDescription String? // For roadside: description of landmark/location
  homeLatitude      Float?
  homeLongitude     Float?
  homeAddress       String?
  colorCode         String            @default("#3B82F6") // Default blue
  attendance        ChildAttendance[]
  tripExceptions    TripException[]
  earlyPickupRequests EarlyPickupRequest[]
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  @@index([parentId])
  @@index([schoolId])
}

model Bus {
  id          String        @id @default(uuid())
  plateNumber String        @unique
  capacity    Int
  driverId    String
  driver      Driver        @relation(fields: [driverId], references: [id])
  locations   BusLocation[]
  trips       Trip[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([driverId])
}

model Route {
  id        String   @id @default(uuid())
  name      String
  schoolId  String
  school    School   @relation(fields: [schoolId], references: [id])
  stops     Stop[]
  trips     Trip[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([schoolId])
}

model Stop {
  id        String   @id @default(uuid())
  name      String
  latitude  Float
  longitude Float
  order     Int
  routeId   String
  route     Route    @relation(fields: [routeId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([routeId])
}

model Trip {
  id          String            @id @default(uuid())
  busId       String
  bus         Bus               @relation(fields: [busId], references: [id])
  routeId     String
  route       Route             @relation(fields: [routeId], references: [id])
  driverId    String
  driver      Driver            @relation(fields: [driverId], references: [id])
  status      TripStatus        @default(SCHEDULED)
  startTime   DateTime?
  endTime     DateTime?
  histories   TripHistory[]
  attendances ChildAttendance[]
  exceptions  TripException[]
  earlyPickupRequests EarlyPickupRequest[]
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  @@index([busId])
  @@index([routeId])
  @@index([driverId])
}

model TripHistory {
  id        String     @id @default(uuid())
  tripId    String
  trip      Trip       @relation(fields: [tripId], references: [id])
  status    TripStatus
  timestamp DateTime   @default(now())
  createdAt DateTime   @default(now())

  @@index([tripId])
}

model ChildAttendance {
  id         String           @id @default(uuid())
  childId    String
  child      Child            @relation(fields: [childId], references: [id])
  tripId     String
  trip       Trip             @relation(fields: [tripId], references: [id])
  status     AttendanceStatus
  timestamp  DateTime         @default(now())
  recordedBy String // userId of who recorded it
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt

  @@unique([childId, tripId])
  @@index([childId])
  @@index([tripId])
}

model BusLocation {
  id        String   @id @default(uuid())
  busId     String
  bus       Bus      @relation(fields: [busId], references: [id])
  latitude  Float
  longitude Float
  speed     Float
  timestamp DateTime @default(now())
  createdAt DateTime @default(now())

  @@index([busId, timestamp(desc)])
}

model PaymentIntent {
  id        String   @id @default(uuid())
  amount    Int
  currency  String   @default("UGX")
  parentId  String
  parent    User     @relation(fields: [parentId], references: [id])
  status    String // pending, succeeded, failed
  hubtleRef String?
  metadata  Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([parentId])
}

model Notification {
  id        String           @id @default(uuid())
  title     String
  message   String
  type      NotificationType
  userId    String
  user      User             @relation(fields: [userId], references: [id])
  isRead    Boolean          @default(false)
  sentAt    DateTime         @default(now())
  readAt    DateTime?
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  @@index([userId])
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  action    String
  entity    String
  entityId  String?
  details   Json?
  ipAddress String?
  userAgent String?
  timestamp DateTime @default(now())

  @@index([userId])
  @@index([timestamp])
}

model TripException {
  id        String   @id @default(uuid())
  childId   String
  child     Child    @relation(fields: [childId], references: [id])
  tripId    String?
  trip      Trip?    @relation(fields: [tripId], references: [id])
  date      DateTime
  type      String   // "SKIP_TRIP" or "EARLY_PICKUP"
  reason    String?
  status    String   // "ACTIVE", "COMPLETED", "CANCELLED"
  requestedAt DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([childId, tripId])
  @@index([childId])
  @@index([tripId])
  @@index([date])
}

model EarlyPickupRequest {
  id              String        @id @default(uuid())
  childId         String
  child           Child         @relation(fields: [childId], references: [id])
  tripId          String
  trip            Trip          @relation(fields: [tripId], references: [id])
  requestedBy     String
  requestedByUser User          @relation("EarlyPickupRequester", fields: [requestedBy], references: [id])
  status          RequestStatus @default(PENDING)
  reason          String?
  requestedTime   DateTime      @default(now())
  approvedBy      String?
  approvedByUser  User?         @relation("EarlyPickupApprover", fields: [approvedBy], references: [id])
  approvedAt      DateTime?
  rejectionReason String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@unique([childId, tripId])
  @@index([childId])
  @@index([tripId])
  @@index([status])
  @@index([requestedTime])
}
