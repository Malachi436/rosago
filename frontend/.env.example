# ROSAgo Environment Variables
# Copy this file to .env and fill in your actual values

# ===================================
# MAPBOX CONFIGURATION
# ===================================
# Get your token from: https://account.mapbox.com/access-tokens/
EXPO_PUBLIC_MAPBOX_TOKEN=your_mapbox_token_here

# ===================================
# API CONFIGURATION
# ===================================
# Your backend API base URL
EXPO_PUBLIC_API_URL=https://api.rosago.com

# API timeout (milliseconds)
EXPO_PUBLIC_API_TIMEOUT=30000

# ===================================
# WEBSOCKET CONFIGURATION
# ===================================
# WebSocket URL for real-time tracking
EXPO_PUBLIC_WS_URL=wss://ws.rosago.com

# ===================================
# OPTIONAL: ANALYTICS & MONITORING
# ===================================
# Sentry DSN for error tracking
# Get from: https://sentry.io/
EXPO_PUBLIC_SENTRY_DSN=

# Google Analytics / Firebase
EXPO_PUBLIC_FIREBASE_API_KEY=
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=
EXPO_PUBLIC_FIREBASE_PROJECT_ID=

# ===================================
# OPTIONAL: PAYMENT GATEWAY
# ===================================
# Mobile Money Integration
EXPO_PUBLIC_MOMO_API_KEY=
EXPO_PUBLIC_MOMO_USER_ID=

# ===================================
# OPTIONAL: PUSH NOTIFICATIONS
# ===================================
# OneSignal App ID
EXPO_PUBLIC_ONESIGNAL_APP_ID=

# ===================================
# DEVELOPMENT
# ===================================
# Enable debug mode
EXPO_PUBLIC_DEBUG=false

# Mock GPS updates (for development)
EXPO_PUBLIC_USE_MOCK_GPS=true
